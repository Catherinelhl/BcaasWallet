<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/aty_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginLeft="@dimen/d32"
        android:layout_marginRight="@dimen/d32"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_new_wallet"
            android:textColor="@color/black" />

        <View
            style="@style/line_style"
            android:layout_marginTop="@dimen/d10" />

        <EditText
            android:id="@+id/et_password"
            style="@style/edittext_style"
            android:layout_marginTop="@dimen/d20"
            android:hint="@string/password" />

        <TextView
            android:id="@+id/tv_password_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/d4"
            android:text="@string/password_rule"
            android:textSize="@dimen/text_size_12" />

        <EditText
            android:id="@+id/et_password_confirm"
            style="@style/edittext_style"
            android:layout_marginTop="@dimen/d20"
            android:hint="@string/please_input_password_again" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d50"
                android:layout_weight="1"
                android:text="@string/sure" />
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginTop="@dimen/d10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d4"
            android:paddingLeft="@dimen/d3"
            android:text="@string/remember_password"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>