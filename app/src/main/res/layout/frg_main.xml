<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d32"
    android:paddingRight="@dimen/d32">

    <TextView
        style="@style/black_text_style"
        android:layout_marginTop="@dimen/d20"
        android:text="@string/my_account_adress" />

    <EditText
        android:id="@+id/myAccountAddress"
        android:layout_marginTop="@dimen/d10"
        style="@style/edittext_style_nofocus" />

    <TextView
        style="@style/black_text_style"
        android:layout_marginTop="@dimen/d30"
        android:text="@string/account_balance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_select"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d5"
            android:layout_weight="1.1"
            android:background="@drawable/bg_spinner"
            android:dropDownHorizontalOffset="-10dp"
            android:dropDownVerticalOffset="2dp"
            android:padding="@dimen/d2"
            android:popupBackground="@color/transparent"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/tv_balance"
            style="@style/black_text_style"
            android:layout_width="@dimen/d0"
            android:layout_margin="@dimen/d5"
            android:layout_marginLeft="@dimen/d10"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="2006.855000 " />

        <TextView
            android:id="@+id/tvCurrency"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/d5"
            tools:text="BCC" />
    </LinearLayout>

    <TextView
        style="@style/black_text_style"
        android:layout_marginTop="@dimen/d40"
        android:text="@string/pending_transaction" />

    <View
        style="@style/line_style"
        android:layout_marginTop="@dimen/d10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPendingTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:listitem="@layout/item_transaction" />

</LinearLayout>