<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/aty_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="1.3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginLeft="@dimen/d32"
        android:layout_marginRight="@dimen/d32"
        android:layout_weight="2">

        <EditText
            android:id="@+id/et_password"
            style="@style/edittext_style"
            android:hint="@string/password" />

        <Button
            android:id="@+id/btn_unlock_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="@dimen/d20"
            android:background="@drawable/selector_btn_style"
            android:text="@string/unlock" />

        <View
            style="@style/line_style"
            android:layout_below="@+id/btn_unlock_wallet"
            android:layout_marginTop="@dimen/d20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_unlock_wallet"
            android:layout_marginTop="@dimen/d40">

            <Button
                android:id="@+id/btn_create_wallet"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_style"
                android:text="@string/create_new_wallet" />

            <Button
                android:id="@+id/btn_import_wallet"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d50"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_style"
                android:text="@string/import_wallet" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>