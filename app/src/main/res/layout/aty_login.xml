<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_grey"
    android:orientation="vertical">

    <include
        layout="@layout/aty_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="1.3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/llInputPwd"
            style="@style/bg_white_style"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/black_text_style"
                android:layout_margin="@dimen/d16"
                android:text="@string/password" />

            <include layout="@layout/inc_et_private_key" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_unlock_wallet"
            style="@style/btn_login_style"
            android:layout_below="@+id/llInputPwd"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/unlock" />


        <TextView
            android:id="@+id/tv_create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_unlock_wallet"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/create_new_wallet"
            android:textColor="@color/red_da261f"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_import_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_unlock_wallet"
            android:layout_marginRight="@dimen/d12"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/import_wallet"
            android:textColor="@color/red_da261f"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>


</LinearLayout>