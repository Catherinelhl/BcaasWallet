<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- 普通分割线的样式-->

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d0.5</item>
        <item name="android:background">@color/grey2</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d38</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="edittext_style_nofocus" parent="edittext_style">
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black5</item>
    </style>

    <style name="black_text_style" parent="marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="item_text_style" parent="black_text_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/value_black70</item>
    </style>

    <style name="title_style" parent="marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/title_black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="grey_text_style" parent="marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="marquee_style">
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="bg_white_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d0</item>
        <item name="android:layout_marginLeft">@dimen/d10</item>
        <item name="android:layout_marginRight">@dimen/d10</item>
        <item name="android:layout_marginTop">@dimen/d20</item>
        <item name="android:background">@drawable/bg_white</item>
        <item name="android:paddingLeft">@dimen/d12</item>
        <item name="android:paddingRight">@dimen/d12</item>

    </style>

    <style name="btn_style">
        <item name="android:background">@drawable/selector_btn_style</item>
        <item name="android:layout_height">@dimen/d48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/d16</item>
        <item name="android:layout_marginRight">@dimen/d16</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/theme_red</item>
    </style>
</resources>
